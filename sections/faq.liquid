<div id="top">
  <div>
      <div class="section-header" style="background-color: #4b7d2c; padding: 2rem 0; margin-bottom: 0;">
      <div class="page-width">
        <h1 style="color:#fff; text-transform: uppercase; margin-bottom: 0;">{{ page.title }}</h1>
      </div>
    </div>
    {%- if section.settings.show_banner -%}
      <div class="section-header " style="background-color: #E9EBEC; padding: 25px 0 ; ">
        <div class="page-width">
          <h3 style="color:#6CB33F; text-transform: uppercase; margin-bottom:0">{{ section.settings.banner_text}}</h3>
        </div>
      </div>
    {%- endif -%}
  </div>

  <div class="page-width flex-wrap-sm" style="  display:flex;  margin: 0 auto; justify-content: flex-end; padding: 20px 55px">
    <div class="w-25">
        
         {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'link_list' -%}
                {%- assign footer_linklist = block.settings.menu -%}

                  <ul class="site-side-nav__linklist
                            {% if inline_list %}list--inline{% endif %}">
                    {%- for link in linklists[footer_linklist].links -%}
                      <li class="site-side-nav__linklist-item" style=" font-weight:600; padding-bottom: 10px;">
                        <a href="{{ link.url }}"
                          {% if link.current %} aria-current="page"{% endif %}
                        >
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
            {%- endcase -%}
          {%- endfor -%}
    </div>
    
    
    <div class="w-75">
    
    
	{%- for block in section.blocks -%}
      {%- case block.type -%}
      
<!--      heading  -->

 {%- when 'textarea' -%}    
{%- include 'h-tags.liquid' -%}

<!--     end heading  -->


<!--      Accordion  -->

    
{%- when 'accordion' -%}    
{%- include 'accordion' -%}    
	    <div style="margin-top: 10px;">
    <a style="color:#6CB33F" href="#top">« back to top</a>
    </div>

<!--     End Accordion  -->


<!--      Content  -->
      
         {%- when 'richtext' -%}    

     		 <p> {{ block.settings.page_content }}</p>
           


         {%- when 'page_content' -%}    

     		 <p>{{ page.content }} </p>


<!--     End Content  -->
 
 
<!--      Button  -->
      
{%- when 'button' -%}    
{% include 'button' %}


<!--      End Button  -->

{%- when 'padding' -%}
      
<div style="padding:{{ block.settings.padding_size }}px;"></div>
          
<!--      Cards  -->
      
{%- when 'cards' -%}
      
{% include 'cards' %}

<!--      End Cards  -->







      {%- endcase -%}
    {%- endfor -%}

  </div>    

</div>






