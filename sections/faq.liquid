        .faq-accordion {
            width: 100%;
            background-color: #fff;
            border-bottom: 1px solid #6CB33F;

        }
        .faq-accordion .faq-accordion-head {
            display: flex;
            justify-content: space-between;
            align-content: center;
            color: #000;
            border-top: 1px solid #6CB33F;
            position: relative;
            padding: 12px 5px;
            font-size: 0.87em;
            cursor: pointer;
            overflow: hidden;
        }


        .faq-accordion .faq-accordion-head * {
            cursor: pointer;

        }
        .faq-accordion .faq-accordion-head h4 {
            float: left;
        }

        .faq-accordion .faq-accordion-body {
            border-bottom: 2px solid #6CB33F;
            padding: 10px 5px 20px 5px;
            height: auto;
            display: none;
            background-color: #fff;
        }


        .close{
            float: none!important;
        } 
  
 
{% endstylesheet %}

{% javascript %}

     jQuery('.faq-accordion').each(function () {
        var accordian = jQuery(this);
        accordian.find('.faq-accordion-head').on('click', function () {
            jQuery(this).parent().find(".faq-accordion-head").removeClass('open close');
            jQuery(this).removeClass('open').addClass('close');
            accordian.find('.faq-accordion-body').slideUp();
            if (!jQuery(this).next().is(':visible')) {
                jQuery(this).removeClass('close').addClass('open');
                jQuery(this).next().slideDown();
            }
        });
    }); 
{% endjavascript %}

