{% schema %}
  {
    "name": "Image Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": {
          "en": "Add an full width image.",
          "es": "Agrega una imagen.",
          "fr": "Ajoutez une image."
        }
      }
    ],
    "presets": [
      {
        "name": "Image Section"
      }
    ]
  }
{% endschema %}

{% if section.settings.image %}
  <div class="container mx-auto py-4">
    <img loading="lazy" src="{{ section.settings.image | image_url }}" width="991" height="500" alt="{{ section.settings.image.alt }}" class="md:px-4 w-full h-auto">
  </div>
{% endif %}



