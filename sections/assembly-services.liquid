{%- include 'section-header' -%}
{% include 'breadcrumbs' %}  

<div class="feature-row-wrapper-templates">
  <div class="page-width flex-wrap-sm" style="display:flex;  margin: 0 auto; justify-content: flex-end; padding: 20px 55px">
    <div class="w-25">
         {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'link_list' -%}
                {%- assign footer_linklist = block.settings.menu -%}

                  <ul class="site-side-nav__linklist
                            {% if inline_list %}list--inline{% endif %}">
                    {%- for link in linklists[footer_linklist].links -%}
                      <li class="site-side-nav__linklist-item" style=" font-weight:600; padding-bottom: 10px;">
                        <a href="{{ link.url }}"
                          {% if link.current %} aria-current="page"{% endif %}
                        >
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
            {%- endcase -%}
          {%- endfor -%}
    </div>
    
    
    <div class="sidebar-page__content w-75">
	    {%- for block in section.blocks -%}
        {%- case block.type -%}
      
          {% comment %}
          Heading
          {% endcomment %}
          {%- when 'textarea' -%}    
            {%- include 'h-tags.liquid' -%}    

          {% comment %}  
          Content
          {% endcomment %}
          {%- when 'richtext' -%}
     		    <p> {{ block.settings.page_content }}</p>
           
          {%- when 'page_content' -%}    
            <p>{{ page.content }} </p>
 
          {% comment %}
          Button
          {% endcomment %}
          {%- when 'button' -%}    
            {% include 'button' %}
 
          {% comment %}
          Image Picker
          {% endcomment %}
          {%- when 'image_layout' -%}
            {% include 'image-picker' %}

          {% comment %}  
          Cards
          {% endcomment %}
          {%- when 'cards' -%}
            {% include 'cards' %}

          {% comment %}
          Cards
          {% endcomment %}
          {%- when 'padding' -%}
            <div style="padding:{{ block.settings.padding_size }}px;"></div>

          {% comment %}
          Full Width Image
          {% endcomment %}
          {%- when 'full_image' -%}
            <div style="background-image: url('{{ block.settings.image_picker  | img_url: '2048x' }}'); background-position: center; background-repeat: no-repeat; width:100%; height: 500px; "></div>

          {% comment %}
          Video
          {% endcomment %}
          {%- when 'video' -%}
            {%- include 'full-video' -%}

          {% comment %}
          Items We Assemble and Deliver section
          {% endcomment %}
          {% when 'items_we_assemble' %}
            {% include 'items-we-assemble' %}

        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>






