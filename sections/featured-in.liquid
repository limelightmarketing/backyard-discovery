{% stylesheet %}

.image-container{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.featured-in-image{
    display: inline-block;
    flex-grow: 1 0 20%;
    margin: 20px 0px;
}

.featured-in_title{
    margin: 20px 0px
}

@media only screen and (max-width: 750px){
    .image-container{
        justify-content: center;
    }
}

{% endstylesheet %}

{% schema %}
  {
    "name": "Featured In",
    "settings":[
                {
                  "type": "text",
                  "id": "title",
                  "label": "Heading"
                }
            ],
    "blocks": [
        {
          "name": "Image",
          "type": "image",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            }
          ]
        }
    ],
    "presets": [
        {
            "name": "Featured In",
            "blocks": [
                {
                    "type": "image"
                },
                {
                    "type": "image"
                },
                {
                    "type": "image"
                },
                {
                    "type": "image"
                }
            ]
        }
    ]
  }
{% endschema %}

<section class="page-width section-featured-in">
<div class="section-header text-center featured-in_title">
  <h2>{{section.settings.title}}</h2>
</div>
<div class="image-container">
  {% for block in section.blocks %}
    <div class="featured-in-image">
      <img class="" src="{{ block.settings.image | img_url: '225x' }}" alt="{{ block.settings.alt_text}}">
    </div>
  {% endfor %}
</div>
</section>
