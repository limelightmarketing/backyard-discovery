<div class="embed-responsive embed-responsive-16by9" style=" display:flex; justify-content: center; margin: 20px auto; width: 100%;">

{% if block.settings.video_url contains "youtube" %}
  {% if block.settings.video_url contains "watch" %}
    {% assign youtubeVideoId = block.settings.video_url | split: 'https://www.youtube.com/watch?v=' %}
       <iframe width="100%" height="460" src="https://www.youtube.com/embed/{{ youtubeVideoId }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
  
  
  {% else %}
       <iframe width="100%" height="460" src="{{ block.settings.video_url }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
  {% endif  %}
{% elsif block.settings.video_url contains 'vimeo' %}
{% if block.settings.video_url contains 'vimeo' %}
  {% if block.settings.video_url contains 'player' %}
             <iframe width="100%" height="460" src="{{ block.settings.video_url }}" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
  {% else %}
        {% assign vimeoVideoId = block.settings.video_url | split: 'https://vimeo.com/' %}
      <iframe src="https://player.vimeo.com/video/{{ vimeoVideoId }}" width="100%" height="460" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
  {% endif  %}
    {% endif  %} 
{% endif  %}

</div>